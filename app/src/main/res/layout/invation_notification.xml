<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:src="@drawable/dot_blue_icon"
            android:layout_margin="19dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="left"
            android:layout_gravity="left|center_vertical">

            <TextView
                android:id="@+id/notif_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"


                android:text="@string/invitation_to_tour"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="11dp"
            android:visibility="gone"
            >

            <ImageButton
                android:id="@+id/accept_btn"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/accept_icon"
                android:background="@drawable/accept_btn"/>

            <ImageButton
                android:id="@+id/rejekt_btn"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/negative_icon"
                android:background="@drawable/delete_btn"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="11dp"
            android:visibility="gone"
            >

            <ImageButton
                android:id="@+id/accept_btn2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/accept_icon"
                android:background="@drawable/accept_btn"/>

            <ImageButton
                android:id="@+id/rejekt_btn2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/negative_icon"
                android:background="@drawable/delete_btn"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:background="@color/stroke"
        android:foregroundGravity="center_horizontal" />

</LinearLayout>